---
import logo from '@/assets/svg/logo_sin_fondo.svg';
import Autoria from '@/components/base-components/Autoria.astro';
---

<footer
  class="relative mt-6 h-[200px] w-full overflow-hidden text-center text-seasalt-100 sm:mt-0 lg:h-[350px]"
>
  <div class="flex h-full w-full items-center justify-between rounded-tr-full bg-oxfordblue-500">
    <div class="flex h-full w-1/2 flex-col items-center justify-start sm:w-[70%] sm:pl-10">
      <a
        class="flex h-[90%] w-full cursor-pointer flex-col items-center sm:h-[80%] sm:flex-row lg:h-[90%]"
        href="/#hero"
        aria-label="Ir al inicio de la página principal de Planifica Mejor"
      >
        <img
          src={logo.src}
          alt="Logo Planifica Mejor"
          class="h-[70%] object-cover object-center sm:h-[60%] xl:h-[70%]"
          data-aos="fade-right"
        />
        <p
          class="text-seasalt-100 sm:text-4xl lg:text-5xl xl:text-7xl"
          data-aos="fade-right"
          data-aos-delay="300"
          data-aos-offset="-50"><strong class="font-black">PLANIFICÁ</strong> MEJOR</p
        >
      </a>
      <p
        class="-mt-6 w-full pl-2 text-left text-[10px] font-thin text-nowrap text-seasalt-100 opacity-40 sm:pl-10 sm:text-xs"
        data-aos="fade-in"
        data-aos-offset="-200"
        data-aos-delay="200">© 2025 Planifica Mejor. Todos los derechos reservados.</p
      >
      <!--  <p
        class="-mt-0 w-full pl-2 text-left text-[8px] font-thin text-nowrap text-seasalt-100 opacity-40 sm:pl-10 sm:text-wrap"
        >Todos tus datos están seguros con nosotros. Utilizamos protección y privacidad según
        estándares legales.</p
      > -->
    </div>

    <div class="h-full w-1/2 place-content-end sm:w-[25%] lg:w-[30%] xl:w-[20%]">
      <div class="icons__container relative size-1/2">
        <!-- Redes Sociales -->
        <a
          href="https://www.facebook.com/planificamejor/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Link a Facebook de Planifica Mejor"
          class="absolute -top-[50%] left-[100%] z-10 flex size-[35px] cursor-pointer items-center justify-center lg:size-[50px] xl:left-[90%]"
          data-aos="fade-up"
          data-aos-offset="-50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke=" #f7f6f5"
            stroke-width="1.8"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-facebook size-[80%] stroke-turquoise-200 transition-all duration-500 hover:stroke-seasalt-100"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
            ></path></svg
          >
        </a>
        <a
          href="https://www.instagram.com/planificamejor/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Link a Instagram de Planifica Mejor"
          class="absolute -top-[20%] left-[130%] z-10 flex size-[35px] cursor-pointer items-center justify-center lg:size-[50px] xl:-top-[18%] xl:left-[125%]"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-offset="-50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.8"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram size-[80%] stroke-turquoise-200 transition-all duration-500 hover:stroke-seasalt-100"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
            ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path d="M16.5 7.5v.01"
            ></path></svg
          >
        </a>
        <a
          class="absolute top-[20%] left-[150%] z-10 flex size-[35px] cursor-pointer items-center justify-center lg:size-[50px]"
          href="https://wa.me/5401151325016?text=Hola, quiero hacerte una consulta."
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Link a Whatsapp de Planifica Mejor"
          data-aos="fade-up"
          data-aos-delay="200"
          data-aos-offset="-50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.8"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp size-[80%] stroke-turquoise-200 transition-all duration-500 hover:stroke-seasalt-100"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path><path
              d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </div>

  <div
    class="absolute top-0 right-0 h-full w-[30%] rounded-l-full border-2 border-r-0 border-turquoise-300 sm:w-[20%] lg:w-[30%] xl:w-[20%]"
  ></div>

  <Autoria />
</footer>

