---
import imgFondo from '@/assets/svg/logo_sin_fondo.svg';
import Subrayado from './Subrayado.astro';
import EmpresasCardWeb from './EmpresasCardWeb.astro';
import EmpresasCardMovil from './EmpresasCardMovil.astro';
---

<div
  class="my-12 flex w-full flex-col items-center justify-center gap-6 lg:my-24 lg:gap-6 xl:my-16 xl:flex-row xl:justify-between"
>
  <div class="mx-auto grid h-full w-full place-items-center xl:w-auto" data-aos="fade-right">
    <h3
      class="relative flex text-2xl font-black text-oxfordblue-500 lg:text-5xl"
      aria-label="Empresas"
      >EM
      <span class="w-[40px] lg:w-[80px]"></span>
      RESAS
      <Subrayado />
      <img
        src={imgFondo.src}
        alt="imagen de logo de Planifica Mejor"
        loading="lazy"
        class="absolute -bottom-3 left-[22px] -z-10 w-[80px] object-cover object-top lg:-bottom-6 lg:left-[45px] lg:w-[163.33px]"
      />
    </h3>
  </div>

  <EmpresasCardWeb />
  <EmpresasCardMovil />
</div>
