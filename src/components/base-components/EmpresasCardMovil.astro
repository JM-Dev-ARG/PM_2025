---
import BotonContacto from './BotonContacto.astro';
import dataEmpresas from '@/data/serviciosEmpresas.json';
---

<div
  class="empresas__container flex w-full flex-col items-center justify-between gap-4 overflow-hidden sm:w-[80%] lg:hidden xl:px-6"
>
  {
    dataEmpresas.map((item) => (
      <div class="empresas__card">
        <div class="card__content_normal">
          <h3 class="titulo_card_empresas font-bold text-seasalt-100">{item.titulo}</h3>
          <div class="descripcion_card_empresas text-lg">
            <p class="texto__corto">{item.textoLargo}</p>
            <div class="w-fit">
              <BotonContacto texto="Comencemos" href={item.href} />
            </div>
          </div>
        </div>
      </div>
    ))
  }
</div>

<style>
  .empresas__card {
    flex: 1;
    transition: all 0.5s linear;
    cursor: pointer;
    background: var(--color-oxfordblue-500);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--color-turquoise-200);
    border-radius: 24px;

    .card__content_normal {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: start;
      gap: 10px;
      padding: 24px;
      text-align: center;
      height: 100%;
      transition: all 0.5s linear;

      .titulo_card_empresas {
        height: 20%;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.5s linear;
        transform: rotate((0deg));
        overflow: hidden;
        font-size: 48px;
      }

      .descripcion_card_empresas {
        text-wrap: balance;
        transition: all 0.5s linear;
        color: var(--color-seasalt-100);
        position: relative;
        width: 100%;
        height: 70%;
        display: flex;
        flex-direction: column;
        gap: 32px;
        font-weight: 300;
        align-items: center;
        justify-content: center;
        transition-behavior: allow-discrete;
      }

      .texto__corto {
        opacity: 1;
        transition: all 0.5s linear;
        position: relative;

        transition-behavior: allow-discrete;
      }

      .texto__expandido {
        opacity: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 32px;
        transition: all 0.5s linear;
        position: absolute;
        width: 100%;
        height: 100%;
        transition-behavior: allow-discrete;
      }
    }
  }

  .empresas__card:not(:hover) {
    transition-delay: 0.3s;
  }
  .empresas__card:not(:hover) .card__content_normal .descripcion_card_empresas {
    transition-delay: 0.4s;
  }
  .empresas__card:not(:hover) .card__content_normal .titulo_card_empresas {
    transition-delay: 0.4s;
  }

  .empresas__container:has(.empresas__card:hover) .empresas__card:not(:hover) {
    flex: 0;
    border-radius: 60px;
  }
  .empresas__container:has(.empresas__card:hover)
    .empresas__card:hover
    .card__content_normal
    .descripcion_card_empresas
    .texto__corto {
    opacity: 0;
  }
  .empresas__container:has(.empresas__card:hover)
    .empresas__card:hover
    .card__content_normal
    .texto__expandido {
    opacity: 1;
    transition-delay: 0.5s; /* display: flex; */
  }

  .empresas__container:has(.empresas__card:hover)
    .empresas__card:not(:hover)
    .card__content_normal
    .descripcion_card_empresas
    .texto__expandido {
    opacity: 0;
    display: none;
    transition-delay: 0s;
    transition-duration: 0.3s;
  }

  .empresas__container:has(.empresas__card:hover)
    .empresas__card:not(:hover)
    .card__content_normal
    .descripcion_card_empresas {
    opacity: 0;
    height: 0;
    transition-delay: 0s;
    transition-duration: 0.2s;
  }
  .empresas__container:has(.empresas__card:hover)
    .empresas__card:not(:hover)
    .card__content_normal
    .titulo_card_empresas {
    height: 100%;
    transform: rotate(-90deg);
    font-size: 32px;
    text-wrap: nowrap;
    transition-delay: 0s;
  }
</style>
